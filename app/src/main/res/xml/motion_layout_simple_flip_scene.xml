<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000">
        <OnClick motion:targetId="@+id/numberDeck" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/flipCardBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/numberDeck"
            motion:layout_constraintStart_toStartOf="@id/numberDeck"
            motion:layout_constraintEnd_toEndOf="@id/numberDeck"
            motion:layout_constraintBottom_toBottomOf="@id/numberDeck" />
        <Constraint
            android:id="@+id/flipCardFront"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/numberDeck"
            motion:layout_constraintStart_toStartOf="@id/numberDeck"
            motion:layout_constraintEnd_toEndOf="@id/numberDeck"
            motion:layout_constraintBottom_toBottomOf="@id/numberDeck" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/flipCardBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/actionDeck"
            motion:layout_constraintStart_toStartOf="@id/actionDeck"
            motion:layout_constraintEnd_toEndOf="@id/actionDeck"
            motion:layout_constraintBottom_toBottomOf="@id/actionDeck" />
        <Constraint
            android:id="@+id/flipCardFront"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/actionDeck"
            motion:layout_constraintStart_toStartOf="@id/actionDeck"
            motion:layout_constraintEnd_toEndOf="@id/actionDeck"
            motion:layout_constraintBottom_toBottomOf="@id/actionDeck" />
    </ConstraintSet>

</MotionScene>